    <body class="bg">
        <div class="container-fluid p-2">
            <h1 class="h1 text-center text-light font-italic"><%= Title %> Results</h1>
        </div>
        <div class="container p-2">
            <div class="row">
                <div class="col-md-12">
                    <table class="table bg-light table-bordered table-hover">
                        <thead class="thead-dark">
                            <tr>
                                 <% for(var j=0; j < columnHeader.length; j++) { %>
                                    <th class="text-center"><%= columnHeader[j] %></th>
                                <% } %>  
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < search.length; i++) { %>
                            <tr>                                
                                <% for(var j=0; j < symbolicName.length; j++) { %>
